{
  "name": "bookshop-example",
  "version": "1.0.0",
  "description": "A simple Bookshop CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "^9",
    "express": "^4",
    "@cap-js/postgres": "^2",
    "@sap/xssec": "^4"
  },
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@cap-js/cds-types": "^0.13.0",
    "@cap-js/sqlite": "^2",
    "@sap/cds-dk": ">=8",
    "cds-plugin-ui5": "^0.13.0",
    "rimraf": "^5.0.5",
    "mbt": "^1.2.29"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-bookshop-elements": "cds watch --open bookshopelements.bookshopelements/index.html?sap-ui-xx-viewCache=false --livereload false",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1",
    "undeploy": "cf undeploy bookshop-example --delete-services --delete-service-keys --delete-service-brokers",
    "build-and-deploy": "npm run build && npm run deploy"
  },
  "cds": {
    "requires": {
      "[production]": {
        "auth": "xsuaa",
        "db": {
          "kind": "postgres"
        }
      }
    }
  },
  "workspaces": [
    "app/*"
  ],
  "sapux": [
    "app/bookshop-elements"
  ]
}
